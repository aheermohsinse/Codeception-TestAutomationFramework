#!/usr/bin/env php
<?php

$autoloader = __DIR__ . '/../vendor/autoload.php';

if (!file_exists($autoloader)) {
    $stderr = fopen('php://stderr', 'w');
    fwrite(
        $stderr,
        'Unable to find composer autoloader. Make sure dependencies are '
        . 'installed by running "composer install" before running this script.'
        . PHP_EOL
    );
    fclose($stderr);
    exit(1);
}
require_once $autoloader;

use AppiumCodeceptionCLI\AppiumCodeceptionCLI;

$appiumCodeceptionCLI = new AppiumCodeceptionCLI();
$appiumCodeceptionCLI->runApplication();